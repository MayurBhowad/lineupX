<style>
    .card-deck {
        display: flex;
        flex-wrap: wrap;
    }

    .card-deck .col {
        min-width: 200px;
        max-width: 100%;
        margin: 0 1rem;
    }

    .panel-footer {
        display: flex;
        justify-content: space-between;
    }
</style>

<div class="container-fluid">
    <div class="col col-md-3">
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                            Candidate Applications</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                    <ul class="list-group">
                        <li class="list-group-item"><span class="badge">253</span> New</li>
                        <li class="list-group-item"><span class="badge">17</span> Rejected</li>
                        <li class="list-group-item"><span class="badge">3</span> Selected</li>
                    </ul>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
                            Blog</a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <ul class="list-group">
                        <li class="list-group-item"><span class="badge">12</span> New</li>
                        <li class="list-group-item"><span class="badge">5</span> Deleted</li>
                    </ul>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                            Settings</a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <ul class="list-group">
                        <li class="list-group-item"><span class="badge">1</span> Users Reported</li>
                        <li class="list-group-item"><span class="badge">5</span> User Waiting Activation</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <h3 style="text-align: center">All Jobs</h3>
    <hr>
    {{#if error}}
    <h5>{{error}}</h5>
    {{else}}
    <div class="card-deck">
        {{#each jobs}}
        <div class="col mb-4">
            <div class="panel panel-default">
                <div class="panel-heading">{{title}}</div>
                <div class="panel-body">
                    <h3>{{designation}}</h3>
                    <h5 style="font-weight: bold;">Skills:</h5>
                    {{#each skills}}
                    <li>{{this}}</li>
                    {{/each}}
                    <h5 style="font-weight: bold;">description:</h5>
                    <p>{{description}}</p>
                </div>
                <div class="panel-footer">
                    <a href="/client/jobapplications/{{_id}}">
                        <button>applications</button>
                    </a>
                    <button>Remove</button>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
    {{/if}}
</div>